<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Upload Course</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
    
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh;
    }
    
    .form-container {
      box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.5);
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
    }
    
    .form-container:hover {
      box-shadow: 0 35px 60px -12px rgba(0, 0, 0, 0.15);
    }
    
    .input-field {
      transition: all 0.3s ease;
      border: 1px solid #e2e8f0;
    }
    
    .input-field:focus {
      box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.2);
    }
    
    .video-section {
      transition: all 0.3s ease;
      background: linear-gradient(to right, #f8fafc, #f1f5f9);
    }
    
    .video-section:hover {
      background: linear-gradient(to right, #f1f5f9, #e2e8f0);
    }
    
    .btn-primary {
      background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
      transition: all 0.3s ease;
      box-shadow: 0 4px 6px rgba(79, 70, 229, 0.2);
    }
    
    .btn-primary:hover {
      background: linear-gradient(135deg, #4338ca 0%, #6d28d9 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 12px rgba(79, 70, 229, 0.3);
    }
    
    .btn-secondary {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      transition: all 0.3s ease;
      box-shadow: 0 4px 6px rgba(16, 185, 129, 0.2);
    }
    
    .btn-secondary:hover {
      background: linear-gradient(135deg, #059669 0%, #047857 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 12px rgba(16, 185, 129, 0.3);
    }
    
    .dashboard-btn {
      transition: all 0.3s ease;
      box-shadow: 0 4px 6px rgba(37, 99, 235, 0.2);
    }
    
    .dashboard-btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 12px rgba(37, 99, 235, 0.3);
    }
    
    .file-upload {
      position: relative;
      overflow: hidden;
    }
    
    .file-upload input[type="file"] {
      position: absolute;
      left: 0;
      top: 0;
      opacity: 0;
      width: 100%;
      height: 100%;
      cursor: pointer;
    }
    
    .file-upload-label {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 1.5rem;
      border: 2px dashed #cbd5e0;
      border-radius: 0.5rem;
      background-color: #f8fafc;
      transition: all 0.3s ease;
      cursor: pointer;
      text-align: center;
    }
    
    .file-upload-label:hover {
      border-color: #93c5fd;
      background-color: #f0f9ff;
    }
    
    .file-icon {
      font-size: 2rem;
      color: #93c5fd;
      margin-bottom: 0.5rem;
    }
  </style>
</head>
<body class="bg-gray-100 font-sans py-8">

  <div class="max-w-3xl mx-auto p-8 form-container bg-white rounded-xl relative">
    <a href="/dashboard" class="absolute top-6 right-6 dashboard-btn bg-gradient-to-r from-blue-500 to-indigo-600 text-white px-5 py-2.5 rounded-lg shadow-md flex items-center space-x-2">
      <i class="fas fa-home"></i>
      <span>Dashboard</span>
    </a>

    <div class="text-center mb-8">
      <h1 class="text-4xl font-bold text-gray-800 mb-2">Upload New Course</h1>
      <p class="text-gray-600">Share your knowledge with the world</p>
    </div>

    <% if (messages.error) { %>
      <div class="mb-6 p-4 rounded-lg bg-red-50 border border-red-200">
        <p class="text-red-700 flex items-center">
          <i class="fas fa-exclamation-circle mr-2"></i>
          <%= messages.error %>
        </p>
      </div>
    <% } %>
    <% if (messages.success) { %>
      <div class="mb-6 p-4 rounded-lg bg-green-50 border border-green-200">
        <p class="text-green-700 flex items-center">
          <i class="fas fa-check-circle mr-2"></i>
          <%= messages.success %>
        </p>
      </div>
    <% } %>

    <form action="/upload-course" method="POST" enctype="multipart/form-data" class="space-y-6">
      <div class="bg-blue-50 p-5 rounded-xl">
        <h2 class="text-xl font-semibold text-blue-800 mb-4 flex items-center">
          <i class="fas fa-info-circle mr-2"></i>
          Course Information
        </h2>
        
        <div class="space-y-5">
          <div>
            <label class="block font-medium mb-2 text-gray-700">Course Title:</label>
            <input type="text" name="courseTitle" required class="w-full input-field rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500">
          </div>

          <div>
            <label class="block font-medium mb-2 text-gray-700">Short Description:</label>
            <input type="text" name="shortDescription" required class="w-full input-field rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500">
          </div>

          <div>
            <label class="block font-medium mb-2 text-gray-700">Detailed Description:</label>
            <textarea name="detailedDescription" rows="4" required class="w-full input-field rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
          </div>
        </div>
      </div>

      <div class="bg-purple-50 p-5 rounded-xl">
        <h2 class="text-xl font-semibold text-purple-800 mb-4 flex items-center">
          <i class="fas fa-image mr-2"></i>
          Course Thumbnail
        </h2>
        
        <div class="file-upload">
          <label class="file-upload-label">
            <div class="file-icon">
              <i class="fas fa-cloud-upload-alt"></i>
            </div>
            <span class="font-medium text-gray-700">Click to upload thumbnail</span>
            <span class="text-sm text-gray-500 mt-1">PNG, JPG up to 10MB</span>
          </label>
          <input type="file" name="thumbnail" accept="image/*" required class="w-full">
        </div>
      </div>

      <div class="bg-amber-50 p-5 rounded-xl">
        <h2 class="text-xl font-semibold text-amber-800 mb-4 flex items-center">
          <i class="fas fa-video mr-2"></i>
          Course Videos
        </h2>
        
        <div id="video-container" class="space-y-4">
          <div class="video-section p-5 rounded-lg">
            <div class="mb-4">
              <label class="block font-medium mb-2 text-gray-700">Video Title:</label>
              <input type="text" name="videoTitles" placeholder="Enter a descriptive title for this video" required class="w-full input-field rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div class="file-upload">
              <label class="file-upload-label">
                <div class="file-icon">
                  <i class="fas fa-film"></i>
                </div>
                <span class="font-medium text-gray-700">Click to upload video</span>
                <span class="text-sm text-gray-500 mt-1">MP4, MOV up to 500MB</span>
              </label>
              <input type="file" name="videos" accept="video/*" required class="w-full">
            </div>
          </div>
        </div>

        <button type="button" onclick="addVideoField()" class="btn-secondary text-white px-5 py-2.5 rounded-lg mt-4 flex items-center space-x-2">
          <i class="fas fa-plus"></i>
          <span>Add Another Video</span>
        </button>
      </div>

      <button type="submit" class="btn-primary w-full text-white font-semibold py-3.5 rounded-lg shadow-md mt-2 flex items-center justify-center space-x-2">
        <i class="fas fa-upload"></i>
        <span>Upload Course</span>
      </button>
    </form>
  </div>

  <script>
    function addVideoField() {
      const container = document.getElementById('video-container');

      const section = document.createElement('div');
      section.className = 'video-section p-5 rounded-lg mt-4';
      section.innerHTML = `
        <div class="mb-4">
          <label class="block font-medium mb-2 text-gray-700">Video Title:</label>
          <input type="text" name="videoTitles" placeholder="Enter a descriptive title for this video" required class="w-full input-field rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>

        <div class="file-upload">
          <label class="file-upload-label">
            <div class="file-icon">
              <i class="fas fa-film"></i>
            </div>
            <span class="font-medium text-gray-700">Click to upload video</span>
            <span class="text-sm text-gray-500 mt-1">MP4, MOV up to 500MB</span>
          </label>
          <input type="file" name="videos" accept="video/*" required class="w-full">
        </div>
        
        <button type="button" onclick="this.parentElement.remove()" class="mt-3 text-red-600 text-sm font-medium flex items-center space-x-1">
          <i class="fas fa-trash-alt"></i>
          <span>Remove Video</span>
        </button>
      `;

      container.appendChild(section);
      
      // Smooth scroll to the new element
      section.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }
  </script>
</body>
</html>