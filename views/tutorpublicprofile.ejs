<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= tutor.name %> - Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">

  <div class="max-w-3xl mx-auto bg-white p-6 rounded shadow">
    <!-- Tutor Info -->
    <div class="text-center">
      <img src="/<%= tutor.image %>" alt="Tutor photo" class="w-32 h-32 rounded-full mx-auto border-4 border-blue-500 mb-4">
      <h2 class="text-2xl font-bold text-gray-800"><%= tutor.name %></h2>
      <p class="text-gray-600">📞 <%= tutor.phone %> | 🏫 <%= tutor.branch %></p>
      <p class="text-gray-600 mb-4">💼 <%= tutor.skills %></p>

      <!-- Message Button -->
      <form action="/messages/<%= tutor._id %>" method="GET">
        <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">💬 Message</button>
      </form>
    </div>

    <hr class="my-6">

    <!-- Search Bar -->
    <form method="GET" class="mb-6 text-center">
      <input type="text" name="q" value="<%= typeof query !== 'undefined' ? query : '' %>" placeholder="Search videos..." 
        class="w-2/3 sm:w-1/2 px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-400">
      <button type="submit" class="ml-2 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Search</button>
    </form>

    <!-- Tutor's Uploaded Videos -->
    <h3 class="text-xl font-semibold mb-4">Videos by <%= tutor.name %>:</h3>

    <% if (videos.length === 0) { %>
      <% if (query) { %>
        <p class="text-red-500 text-center">No videos found for "<%= query %>"</p>
      <% } else { %>
        <p class="text-gray-500 text-center">No videos uploaded yet.</p>
      <% } %>
    <% } else { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <% videos.forEach(video => { %>
          <div class="bg-gray-50 p-4 rounded shadow">
            <h4 class="font-semibold text-gray-700 mb-2"><%= video.title %></h4>
            <video class="w-full h-40 rounded" controls>
              <source src="/<%= video.videoPath %>" type="video/mp4">
            </video>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

</body>
</html>
